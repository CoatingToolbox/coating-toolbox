{
  "entrypoint": "index.html",
  "shell": "src/coating-toolbox.html",
  "fragments": [
    "src/home-page/home-page.html",
    "src/coating-pan-library/coating-pan-library.html",
    "src/coating-pan-designer/coating-pan-designer.html",
    "src/coating-pan-fill/coating-pan-fill.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/redux/dist/redux.js",
    "node_modules/d3/build/d3.js",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
